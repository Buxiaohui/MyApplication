<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_green_light">

        <TextView
            android:id="@+id/tab_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_eye_default"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/tab_left"
            android:visibility="gone" />

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/id_simple_info_container"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/id_user_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_test0"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/id_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_user_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/tab_left"
            android:visibility="visible" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_use_info_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
